<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="topmove">
 <changeDirection>
  <direction type="absolute">250+$rand*40</direction>
  <term>1</term>
 </changeDirection>
 <changeSpeed>
  <speed>3</speed>
  <term>1</term>
 </changeSpeed>
 <wait>1</wait>
 <changeSpeed>
  <speed>1</speed>
  <term>120</term>
 </changeSpeed>
 <wait>120+$rand*60</wait>
 <changeDirection>
  <direction type="absolute">60+$rand*60</direction>
  <term>30+$rand*30</term>
 </changeDirection>
 <wait>10</wait>
 <changeSpeed>
  <speed>2</speed>
  <term>120</term>
 </changeSpeed>
</action>

</bulletml>
